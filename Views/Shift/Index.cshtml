@model IEnumerable<sumile.Models.Shift>

@{
    ViewData["Title"] = "シフト一覧";
}

<h2>シフト一覧</h2>

<table class="table">
    <thead>
        <tr>
            <th>日付</th>
            <th>シフトタイプ</th>
            <th>最大人数</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var shift in Model)
    {
        <tr>
            <td>@shift.Date.ToShortDateString()</td>
            <td>@shift.ShiftType</td>
            <td>@shift.MaxCapacity</td>
            <td>
                <a asp-action="Edit" asp-route-id="@shift.Id">編集</a> |
                <a asp-action="Delete" asp-route-id="@shift.Id">削除</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">新規シフト作成</a>
