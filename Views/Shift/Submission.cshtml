@model List<DateTime>
@{
    ViewBag.Title = "シフト提出";
}

<h2>シフト提出</h2>
<form method="post" action="@Url.Action("SubmitShifts", "Shift")">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>日付</th>
                <th>シフトタイプ</th>
                <th>選択</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var date in Model)
            {
                <tr>
                    <td>@date.ToString("yyyy-MM-dd")</td>
                    <td>
                        <select name="shiftType">
                            <option value="Morning">Morning</option>
                            <option value="Afternoon">Afternoon</option>
                            <option value="Night">Night</option>
                        </select>
                    </td>
                    <td>
                        <input type="checkbox" name="selectedShifts" value="@date.ToString("yyyy-MM-dd")|ShiftType|true" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">提出</button>
</form>
<a href="@Url.Action("Index", "Shift")" class="btn btn-secondary">戻る</a>
